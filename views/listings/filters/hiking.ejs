<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/style.css">
<body>
    <h2 class="mt-5 i-filter" style="color: #6d030a; text-decoration: underline;" >HIKING PLACES  <i class="fa-solid fa-person-hiking"></i></h2>
     
    <div class="row card-row">
      <%for(let listing of listings) {%>
        <div class="card listing-card mb-3 ms-4  " style="width: 19rem;">
        <a class="card-ind text-decoration-none" href="/listings/<%=listing._id%>">
        <img src="<%=listing.image[0].url%>" class="card-img-top" alt="..."> 
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <h6 class="card-title"><%=listing.title%></h6>
          <p style="font-weight: 600; opacity: 0.9;"> &#x20B9; <%=listing.price.toLocaleString("en-IN")%>/night  <i style="font-weight: 600; opacity: 0.9;" class="tax-info"> &nbsp;&nbsp;+18% GST</i></p>
        </div>
    </a>
      </div>
      <%}%>
        
    </div>
</body>