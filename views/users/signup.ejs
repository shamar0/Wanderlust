<% layout("/layouts/boilerplate") %>

<body>
    <div class="row mt-3 ">
      <h1 class="mb-3 col-6 offset-3" >SIGN UP</h1>
        <form method="post" action="/signup" class="needs-validation" novalidate>
            <div class="mb-3 col-6 offset-3">
                <label for="exampleFormControlInput1" class="form-label">Email</label>
                <input type="text" name="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" required>
              </div>
              <div class="mb-3 col-6 offset-3">
                <label for="exampleFormControlInput2" class="form-label">Username</label>
                <input type="text" name="username" class="form-control" id="exampleFormControlInput2" required>
              </div>
              <div class="mb-3 col-6 offset-3">
                <label for="exampleFormControlInput3" class="form-label">password</label>
                <input type="password" name="password" class="form-control" id="exampleFormControlInput3" required >
              </div>
              <button class="col-6 offset-3 btn btn-primary" >Submit</button>
        </form>
    </div>
</body>
